<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_issue_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:drawableEnd="@drawable/icon_arrow_drop_down"
        android:padding="5dp"
        android:textColor="@color/color_sub_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_issue_state"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="header" />

    <TextView
        android:id="@+id/tv_issue_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:drawableEnd="@drawable/icon_arrow_drop_down"
        android:padding="5dp"
        android:textColor="@color/color_sub_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_issue_sort"
        app:layout_constraintStart_toEndOf="@+id/tv_issue_filter"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="header" />

    <TextView
        android:id="@+id/tv_issue_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:drawableEnd="@drawable/icon_arrow_drop_down"
        android:padding="5dp"
        android:textColor="@color/color_sub_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_issue_direction"
        app:layout_constraintStart_toEndOf="@+id/tv_issue_state"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="header" />

    <TextView
        android:id="@+id/tv_issue_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:drawableEnd="@drawable/icon_arrow_drop_down"
        android:padding="5dp"
        android:textColor="@color/color_sub_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_issue_sort"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="header" />

</androidx.constraintlayout.widget.ConstraintLayout>